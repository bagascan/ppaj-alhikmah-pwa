{
  "version": 2,
  "functions": {
    "backend/api/index.js": {
      "memory": 1024,
      "maxDuration": 10
    }
  },
  "builds": [
    {
      "src": "backend/api/index.js",
      "use": "@vercel/node",
      "config": { "includeFiles": ["backend/**"] }
    },
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "build" }
    }
  ],
  "routes": [
    {
      "src": "/socket.io/",
      "dest": "/backend/api/index.js"
    },
    {
      "src": "/api/(.*)",
      "dest": "/backend/api/index.js"
    },
    {
      "src": "/(.*)",
      "dest": "/build/$1"
    }
  ],
  "crons": [
    {
      "path": "/api/cron/reset-status",
      "schedule": "0 20 * * *" 
    }
  ]
}
